    "webpack-browser-plugin": "^1.0.12",
    "webpack-dev-middleware": "~1.8.3",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "~2.12.1",
    "webpack-notifier": "^1.4.1"
  },
  "dependencies": {
    "classnames": "^2.2.5"
  },
  "standard": {
    "ignore": [
      "build"
    ],
    "parser": "babel-eslint"
  }
