    "picturefill": "^3.0.2",
    "postcss": "~5.2.4",
    "postcss-autoreset": "^1.2.1",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "~2.8.0",
    "postcss-import": "8.1.0",
    "postcss-loader": "~0.13.0",
    "postcss-reporter": "~1.4.1",
    "postcss-smart-import": "^0.4.4",
    "postcss-url": "^5.1.2",
    "precss": "^1.4.0",
