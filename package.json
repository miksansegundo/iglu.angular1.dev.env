{
  "name": "iglu.angular1.dev.env",
  "version": "1.0.0",
  "description": "Node.js Development environment at Iglu.net to develop Angular 1 Components-based Web Apps with ES2015 language and Standard style. CSS Modules & PostCSS.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf build && webpack -p --progress",
    "deploy": "git subtree push --prefix build origin gh-pages && show:deploy",
    "show:deploy": "open https://miksansegundo.github.io/iglu.angular1.dev.env",
    "start": "webpack-dev-server",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "standard --fix --verbose | snazzy && echo 'Good Standad code :)' || echo 'Not good Standad code :('",
    "lint:css": "stylelint ./src/**/*.css"
  },
  "engines": {
    "node": "6.7",
    "npm": ">=3"
  },
  "keywords": [],
  "author": "miguelsansegundo@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-core": "~6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "~6.2.5",
    "babel-polyfill": "~6.16.0",
    "babel-preset-es2015": "~6.16.0",
    "babel-preset-stage-0": "~6.16.0",
    "css-loader": "~0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "0.4.4",
    "html-minify-loader": "^1.1.0",
    "html-webpack-plugin": "~2.22.0",
    "http-server": "^0.9.0",
    "humps": "~1.1.0",
    "icon-maker-loader": "^0.1.7",
