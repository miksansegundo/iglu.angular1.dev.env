{
  "name": "iglu.angular1.dev.env",
  "version": "1.0.0",
  "description": "Node.js Development environment at Iglu.net to develop Angular 1 Components-based Web Apps with ES2015 language and Standard style. CSS Modules & PostCSS.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf build && webpack --bail --progress --profile && npm run server && npm run show.deploy",
    "server": "http-server ./build -o -c",
    "deploy": "git subtree push --prefix build origin gh-pages",
    "show.deploy": "open https://miksansegundo.github.io/iglu.angular1.dev.env",
    "start": "webpack-dev-server --history-api-fallback --inline --progress",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src",
    "lint:css": "stylelint ./src/**/*.css"
  },
  "engines": {
    "node": "6.7",
    "npm": ">=3"
  },
  "keywords": [],
  "author": "miguelsansegundo@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-core": "~6.17.0",
    "babel-eslint": "~7.0.0",
    "babel-loader": "~6.2.5",
    "babel-polyfill": "~6.16.0",
    "babel-preset-es2015": "~6.16.0",
    "babel-preset-stage-0": "~6.16.0",
    "css-loader": "~0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "~2.22.0",
    "http-server": "^0.9.0",
    "humps": "~1.1.0",
    "json-loader": "^0.5.4",
    "ng-annotate-loader": "^0.2.0",
    "normalize.css": "~5.0.0",
    "postcss": "~5.2.4",
    "postcss-autoreset": "^1.2.1",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "~2.8.0",
    "postcss-import": "8.1.0",
    "postcss-loader": "~0.13.0",
    "postcss-reporter": "~1.4.1",
    "postcss-smart-import": "^0.4.4",
    "postcss-url": "^5.1.2",
    "precss": "^1.4.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "standard": "^8.5.0",
    "standard-loader": "^5.0.0",
    "style-loader": "~0.13.1",
    "stylelint": "~7.4.2",
    "stylelint-config-standard": "~13.0.2",
    "webpack": "^2.1.0-beta.24",
    "webpack-dev-middleware": "~1.8.3",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "~2.12.1"
  },
  "dependencies": {
    "classnames": "^2.2.5"
  },
  "standard": {
    "ignore": [
      "/build/"
    ]
  }
}
